<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="45dp"
    tools:context="www.projetotaurus.com.br.jogodavelha.Nomes">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ttoe"
        android:layout_marginLeft="75dp"/>
    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    <EditText
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/editnome1"
        android:hint="@string/jogador1"/>

    <EditText
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/editnome2"
        android:hint="@string/jogador2"/>

    <Button
        android:id="@+id/botaoenviar"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:text="@string/Jogar"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
</LinearLayout>
